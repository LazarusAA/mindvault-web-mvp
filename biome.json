{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": true,
    "include": [
      "frontend/src/app/**/*.ts",
      "frontend/src/app/**/*.tsx",
      "frontend/src/components/**/*.ts",
      "frontend/src/components/**/*.tsx",
      "frontend/src/hooks/**/*.ts",
      "frontend/src/hooks/**/*.tsx",
      "frontend/src/providers/**/*.ts",
      "frontend/src/providers/**/*.tsx",
      "frontend/src/lib/**/*.ts",
      "frontend/src/lib/**/*.tsx",
      "frontend/src/types/**/*.ts",
      "frontend/src/types/**/*.tsx",
      "frontend/src/middleware.ts",
      "types/**/*.ts",
      "types/**/*.d.ts"
    ],
    "ignore": [
      "**/node_modules/**",
      "**/.next/**",
      "**/dist/**",
      "**/build/**",
      "**/*.test.ts",
      "**/*.test.tsx",
      "**/*.spec.ts",
      "**/*.spec.tsx",
      "**/coverage/**",
      "**/storybook-static/**",
      "frontend/src/app/api-docs/**",
      "frontend/src/components/ui/icons/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "formatWithErrors": false,
    "include": ["**/*.{ts,tsx,js,jsx,json}"]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useImportType": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 80,
      "quoteStyle": "double",
      "semicolons": "always"
    }
  }
}
