# Deployment
NODE_ENV=production

# Build Configuration
ANALYZE=false
NEXT_TELEMETRY_DISABLED=1

# API and Environment
NEXT_PUBLIC_API_URL=https://api.mindvault.yourdomain.com
NEXT_PUBLIC_ENVIRONMENT=production

# Database (Xata)
NEXT_PUBLIC_XATA_API_KEY=your-production-xata-key
NEXT_PUBLIC_XATA_BRANCH=main

# Web3 Configuration
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your-production-project-id

# Authentication
NEXTAUTH_URL=https://mindvault.yourdomain.com
NEXTAUTH_SECRET=use-a-secure-random-string-min-32-chars
NEXTAUTH_URL_INTERNAL=http://localhost:3000

# Security
JWT_SECRET=use-a-different-secure-random-string
ENCRYPTION_KEY=32-char-encryption-key-for-sensitive

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Performance
NEXT_PUBLIC_CDN_URL=https://cdn.mindvault.yourdomain.com

# Feature Flags
NEXT_PUBLIC_ENABLE_WORLDID=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_MAINTENANCE_MODE=false

# Cache Control
CACHE_MAX_AGE=31536000
STALE_WHILE_REVALIDATE=86400 